@model Domain.Validation.Admin.validationQuestion
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminOtherPageLayout.cshtml";
}
@Html.Hidden("MenuItems", "1389012364_PixelKit_5-Oclock-Shades-Icon-Set__0008_4.png" + ":-" + "مدیریت سوالات" + ":-" + "جزئیات سوال ")
   <script src="~/Scripts/jquery.js"></script> 
    <script src="~/Scripts/Admin/IconTitlePageScript.js"></script>
@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
}
    <script>
        Page();
    </script>
<div class="divCssWh">
    <div>
        <div class="DivClass">
            <div style="float: left; padding-left: 31px; padding-top: 3px">
                @Html.ActionLink("بازگشت", actionName: "BackListQuestion", controllerName: "Question", routeValues: new { Page = @ViewBag.Page }, htmlAttributes: new { @class = "LinkBackPage" })
            </div>
        </div>
    </div>
    <div class="divCss" style="padding-top: 15px;">
        <div style="width: 100px; text-align: right; float: right">
            @Html.Label("نام فرستنده", new { @class = "WebUserLabel" })
        </div>
        <div class="WebUserLabel" style="float: right; text-align: right; width: auto">
            @Html.DisplayFor(model => model.Name, new { @class = "WebUserLabel" })
        </div>
    </div>
    <div class="divCss" style="padding-top: 15px;">
        <div style="width: 100px; text-align: right; float: right">
            @Html.Label("ایمیل فرستنده", new { @class = "WebUserLabel" })
        </div>
        <div class="WebUserLabel" style="float: right; text-align: right; width: auto">
         @Html.DisplayFor(model => model.Email, new { @class = "WebUserLabel" })
             </div>
    </div>
     <div class="divCss" style="padding-top: 15px;">
        <div style="width: 100px; text-align: right; float: right">
            @Html.Label("متن پیام", new { @class = "WebUserLabel" })
        </div>
        <div class="WebUserLabel" style="float: right; text-align: right; width: 600px;">
         @Html.DisplayFor(model => model.Message , new { @class = "WebUserLabel" })
             </div>
    </div>
@using (Html.BeginForm(actionName: "SaveReadInfo", controllerName: "Question", routeValues: new { Page = @ViewBag.Page }, method: FormMethod.Post,
                            htmlAttributes: new { enctype = "multipart/form-data" }))
    {
    @Html.Hidden("QuestionId", Model.Id)
    <div>
        <div class="divCss">
            <div class="FloatRight" style="width:100px;">
                <span class="WebUserLabel"> وضعیت</span>
            </div>
            <div class="FloatRight">
                @Html.DropDownList("dpStatus", (SelectList)ViewBag.DpStatus1, new { @class = "webUserDropDown", @style = "width:163px" })
            </div>
        </div>
        <div class="divCss">
            <div class="FloatRight" style="width:100px;">
                <span class="WebUserLabel"> توسط</span>
            </div>
            <div class="FloatRight">
                @Html.TextBoxFor(x => x.Reader, new { @class = "WebUserLabel" })
            </div>
            <div class="FloatRight">
                @Html.ValidationMessage("Reader", new { @class = "field-validation-left", @readonly = "readonly" })
            </div>
        </div>
        <div class="divCss">
            <div class="FloatRight" style="width:100px;">
                <span class="WebUserLabel"> در تاریخ</span>
            </div>
            <div class="FloatRight">
                @Html.TextBoxFor(x => x.ReadDate, new { @class = "WebUserLabel" })
            </div>
            <div class="FloatRight">
                @Html.ValidationMessage("ReadDate", new { @class = "field-validation-left", @readonly = "readonly" })
            </div>
        </div>
        <div class="divCss">
            <div class="FloatRight" style="width:100px;">
                &nbsp;
            </div>
            <div class="FloatRight">
                <input id="btnSave" type="submit" class="webUserButton" value="ثبت" />
            </div>
        </div>
    </div>
}
</div>

