@model Domain.Validation.Admin.validationImage
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminOtherPageLayout.cshtml";

}
@Html.Hidden("MenuItems", "1383997298_banner_design.png" + ":-" + "مدیریت بخش های صفحه ی اصلی" + ":-" + "اسلایدشو")
<script src="~/Scripts/jquery.js"></script>
<script src="~/Scripts/Admin/IconTitlePageScript.js"></script>
<script>
    Page();
    PageList('افزودن اسلایدشو', '/Admin/Banner/BannerList');
</script>
<script type="text/javascript" src="~/Scripts/ckeditor/adapters/jquery.js"></script>
<script src="~/Scripts/Admin/NumberTextBox.js"></script>
@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
}
@{
    string Result = Convert.ToString(TempData["result"]);
}
<div class="divCssWh">
    @if (Result != "")
            {
        <div class="divCss" style="padding-right: 0;">
            @if (Result == "OK")
            {
                <div id="SuccessMsg" style="float: right; width: 300px;">
                    @Html.Partial("~/Areas/Admin/Views/Alerts/_Successful.cshtml")
                </div>
            }
            else
            {
                <div id="AlertMsg" style="float: right; width: 300px;">
                    @Html.Partial("~/Areas/Admin/Views/Alerts/_Error.cshtml")
                </div>
            }
        </div>
             }
    @using (Html.BeginForm(actionName: "CreateBanner", controllerName: "Banner", method: FormMethod.Post,
                                   htmlAttributes: new { enctype = "multipart/form-data" }))
    {
        <div class="divCss">
            <div class="DivCss1">
                @Html.Label("عکس", new { @class = "WebUserLabel" })
            </div>
            <div class="FloatRight">
                @Html.TextBoxFor(x => x.ImageBanner, new { @type = "file" })
            </div>
            <div class="FloatRight" style="padding-right: 10px; padding-left: 10px;">
                <label class="webUserErrorText">
                    320*1172 ( نسبت عرض به ارتفاع برابر است با 2.25 )
                </label>
            </div>
            <div class="FloatRight">
                @Html.ValidationMessageFor(x => x.ImageBanner, "عکس الزامی است.", new { @class = "field-validation-left" })
            </div>
        </div>
            <div style="clear: both"></div>
            <br />
            <div class="divCss">
                <div class="DivCss1">
                    @Html.Label("عنوان", new { @class = "WebUserLabel" })
                </div>
                <div class="FloatRight">
                    @Html.TextBox("alt", "", new { @id = "alt" })
                </div>
            </div>
            <div class="divCss">
                <div class="divCss" style="padding-top: 15px; padding-right: 50px">
                    <div class="DivCss1">
                        <input id="btnSave" type="submit" class="webUserButton" value="ثبت" />
                    </div>
                </div>
            </div>
    }
</div>



