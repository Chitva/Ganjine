@model  IList<Domain.ViewModel.Admin.SalesAgencyViewModel>
@{
    string Result = Convert.ToString(TempData["result"]);
    bool IsAdmin = true;
    int TotalCount = Convert.ToInt32(TempData["Count"]);
    TempData["Count"] = TotalCount;
    int EndPage = 0;
    int StartPage = 0;
    int TotalPage = 0;
    //string ClassName;
    int Page = Convert.ToInt32(Request.QueryString["Page"]);
    if (Page == 0)
    {
        Page = 1;
    }
    if (TotalCount % 5 == 0)
    {
        TotalPage = TotalCount / 5;
    }
    else
    {
        TotalPage = (TotalCount / 5) + 1;
    }
    if (Page + 4 > TotalPage)
    {
        EndPage = TotalPage;
    }
    else
    {
        EndPage = Page + 4;
    }
    if (Page <= 4)
    {
        StartPage = 1;
    }
    else
    {
        StartPage = Page - 4;
    }
    int Countergrid = 0;
}
