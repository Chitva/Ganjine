@model  Domain.Validation.Admin.validationAddTabStateHouse
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminOtherPageLayout.cshtml";
    Domain.ViewModel.Admin.IconTitlePage MenuItems = ViewBag.MenuObject;
    string Result = Convert.ToString(TempData["result"]);
}
@Html.Hidden("MenuItems", "1433072936_home.png" + ":-" + "مدیریت صفحات سایت" + ":-" + "محصولات")

<script src="~/Scripts/jquery.js"></script>
<script src="~/Scripts/Admin/IconTitlePageScript.js"></script>
<script>
    Page();
</script>

<link href="~/Content/Admin/validation.css" rel="stylesheet" />
@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
}
<div class="divCssWh">
    @if (Result != "")
    {
        <div class="divCss" style="padding-right: 0;">
            @if (Result == "OK")
            {
                <div id="SuccessMsg" style="float: right; width: 300px;">
                    @Html.Partial("~/Areas/Admin/Views/Alerts/_Successful.cshtml")
                </div>
            }
            else
            {
                <div id="AlertMsg" style="float: right; width: 300px;">
                    @Html.Partial("~/Areas/Admin/Views/Alerts/_Error.cshtml")
                </div>
            }
        </div>
    }
<div>
        @using (Ajax.BeginForm(actionName: "AddTab", controllerName: "Product", ajaxOptions: new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "thisis", InsertionMode = InsertionMode.Replace, OnComplete = "$('input.webUserTextBox').val('');" }))
        {
            @Html.ValidationSummary(true)
            <div class="divCss" style="padding-top: 15px">
                <div class="DivCss2">
                    @Html.Label("نام تب", new { @class = "WebUserLabel" })
                </div>
                <div class="FloatRight">
                    @Html.TextBoxFor(x => x.TabName, new { @class = "webUserTextBox", @style = "width:160px" })
                </div>
                <div class="FloatRight">
                    @Html.ValidationMessage("TabName", new { @class = "field-validation-left" })
                </div>
            </div>
            <div class="divCss">
                <div class="DivCss2">
                    @Html.Label("نوع تب", new { @class = "WebUserLabel" })
                </div>
                <div class="FloatRight">
                    
                    <select name="dpTabType" class="webUserDropDown">
                  <option value="1">متن + تصویر</option>
                       <option value="2">گالری تصویر</option>
                       @* <option value="4">متن</option>*@
                    </select>
                </div>
            </div>
            <div class="divCss" style="padding-top: 15px; padding-right: 29px;">
                <div class="DivCss1">
                    &nbsp;
                </div>
                <div class="FloatRight">
                    <input id="btnSave" type="submit" class="webUserButton" value="ادامه" />
                </div>
            </div>
        }
    </div>
</div>

