@model Domain.Validation.User.ContactUsValidation
@{
    Layout = "~/Areas/EN/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    p, span {
        font-family: "Yekan" !important;
    }

    body, .modal-details-inner, .section-title-style2 span, .section-title.style2 span, .main-container-wrapper {
        background-color: transparent !important;
    }
</style>

<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<link href="~/Content/themes/Default/Validation.css" rel="stylesheet" />
<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="~/">Home</a></li>
                <li class="active">Contact us</li>
            </ul>
        </div>
    </div>
    <div class="row innerPage" style="padding-top:0;">
        <div class="col-lg-12 col-md-12 col-sm-12">

            <div class="row userInfo">
                <div class="col-xs-12 col-sm-12">
                    <div style="background-color: #DEDEDE;">
                        <h1 class="title-big text-center section-title-style2">
                            <span> Contact us </span>
                        </h1>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6">
                    <div class="modal-body" style="padding-top:50px;">
                        @using (Html.BeginForm("SaveMsg", "Home", FormMethod.Post))
                        {
                            if (ViewBag.Msg != null)
                            {
                                <div style="padding-bottom:20px;color:#00ff00;">
                                    @Html.Partial("~/Views/User/_Message.cshtml")
                                </div>
                            }
                            <div class="form-group reg-username">
                                <div>
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control input", @placeholder = "FirsttName", @name = "login", @size = "20" })
                                    @Html.ValidationMessage("Name", new { @class = "field-validation-right" })
                                </div>
                            </div>

                            <div class="form-group reg-username">
                                <div>
                                    @Html.TextBoxFor(x => x.Family, new { @class = "form-control input", @placeholder = "LastName", @name = "login", @size = "20" })
                                    @Html.ValidationMessage("Family", new { @class = "field-validation-right" })
                                </div>
                            </div>

                            <div class="form-group reg-username">
                                <div>
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control input", @placeholder = "Mobile", @name = "login", @size = "20" })
                                    @Html.ValidationMessage("Mobile", new { @class = "field-validation-right" })
                                </div>
                            </div>
                            <div class="form-group reg-username">
                                <div>
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control input", @placeholder = "Tell", @name = "login", @size = "20" })
                                    @Html.ValidationMessage("Tell", new { @class = "field-validation-right" })
                                </div>
                            </div>
                            <div class="form-group reg-username">
                                <div>
                                    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control input", @placeholder = "نام شرکت ", @name = "login", @size = "20" })
                                    @Html.ValidationMessage("CompanyName", new { @class = "field-validation-right" })
                                </div>
                            </div>
                            <div class="form-group reg-username">
                                <div>
                                    @Html.TextBoxFor(x => x.BusinessAreas, new { @class = "form-control input", @placeholder = "Business Areas ", @name = "login", @size = "20" })
                                    @Html.ValidationMessage("BusinessAreas", new { @class = "field-validation-right" })
                                </div>
                            </div>
                            <div class="form-group reg-username">
                                <div>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control input", @placeholder = "Email ", @name = "login", @size = "20" })
                                    @Html.ValidationMessage("Email", new { @class = "field-validation-right" })
                                </div>
                            </div>
                            <div class="form-group reg-username">
                                <div>
                                    @Html.TextBoxFor(x => x.OfficeAddress, new { @class = "form-control input", @placeholder = "Office Address ", @name = "login", @size = "20" })
                                    @Html.ValidationMessage("OfficeAddress", new { @class = "field-validation-right" })
                                </div>
                            </div>
                            <div class="form-group reg-username">
                                <div>
                                    @Html.TextBoxFor(x => x.CompanyAddress, new { @class = "form-control input", @placeholder = "Company Address ", @name = "login", @size = "20" })
                                    @Html.ValidationMessage("CompanyAddress", new { @class = "field-validation-right" })
                                </div>
                            </div>
                            <div class="form-group reg-email">
                                <div>
                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control input", @placeholder = "Title", @name = "reg", @size = "20" })
                                    @Html.ValidationMessage("Title", new { @class = "field-validation-right" })
                                </div>
                            </div>
                            <div class="form-group reg-password">
                                <div>
                                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control input", @placeholder = "Message", @name = "password", @size = "20" })
                                    @Html.ValidationMessage("Comment", new { @class = "field-validation-right" })
                                </div>
                            </div>
                            <div>
                                <div>
                                    <input name="submit" class="btn  btn-block btn-lg btn-primary" value="ثبت" type="submit">
                                </div>
                            </div>
                <!--userForm-->
                        }
                    </div>

                </div>

                <div class="col-xs-6 col-sm-6">

                    <p class="lead text-center">
                        @Html.Raw(ViewBag.ContactUs)
                    </p>

                </div>
            </div>
            <!--/.row  ||  -->

        </div>
    </div>
    <!--/row || innerPage end-->
    <div style="clear:both"></div>
</div>

