@{
    List<Domain.Entities.ServiceTabFile> ServiceTabFileList = ViewBag.ImageGalleryList;
}   
@if (ServiceTabFileList != null && ServiceTabFileList.Count > 0)
{
<div class="clearfix"></div>

<div class="row grid-space-20">
    <div id="gallery" style="display:none;">
        @foreach (var Item1 in ServiceTabFileList)
        {
            <img alt="@(Item1.Alt ?? "تصویر خدمات")"
                 src="/Images/TabGalleryService/thum/@Item1.File"
                 data-image="/Images/TabGalleryService/@Item1.File">
        }
    </div>
</div>

<script type="text/javascript">

		jQuery(document).ready(function(){

		    jQuery("#gallery").unitegallery({
		        tile_enable_shadow: false,
		        tile_enable_border: true,
		        tiles_space_between_cols: 15,
		        tiles_justified_space_between: 15,
		        tiles_col_width: 235,
		        tile_border_color: "#ffffff",
		        tile_outline_color: "#c68e2b",
		        tile_enable_outline: true,
		    });

		});

</script>
