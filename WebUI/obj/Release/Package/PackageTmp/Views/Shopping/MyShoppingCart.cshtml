<script>
    $(document).ready(function () {

        $(".card .body").first().show();

        $(".steps .step").first().addClass("active");

        var index = -1;
        $(".next-btn").click(function () {
            $(".card .body").each(function (i) {
                $(this).hide();
            });
            $(".steps .step").each(function (i) {
                if ($(this).hasClass("active")) {
                    index = i;
                    $(this).removeClass("active");
                }
            });
            $($(".card .body")[index + 1]).show();
            $($(".steps .step")[index + 1]).addClass("active");
            if (index >= 3) {
                index = -1;
            }
        });
    });
</script>
