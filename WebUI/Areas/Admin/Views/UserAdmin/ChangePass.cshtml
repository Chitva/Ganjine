@model  Domain.Validation.Admin.ChangePasswordModel
@{
    ViewBag.Title = "ContactUs";
    string Text = Convert.ToString(ViewBag.ContactUs);
    Layout = "~/Areas/Admin/Views/Shared/_AdminOtherPageLayout.cshtml";
}
@Html.Hidden("MenuItems", "1358169128_change_password.png" + ":-" + " مدیریت ادمین سایت" + ":-" + "تغییر رمز عبور")

    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/Admin/IconTitlePageScript.js"></script>
    <script>
        Page();
    </script>

<link href="~/Content/Admin/validation.css" rel="stylesheet" />
@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
}
<div class="divCssWh">
    <div class="divCss" id="thisis" style="width: 300px;">
    </div>
    <div>
        @using (Ajax.BeginForm(actionName: "ChangePass", controllerName: "UserAdmin", ajaxOptions: new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "thisis", InsertionMode = InsertionMode.Replace, OnComplete = "$('input.webUserTextBox').val('');" }))
        {
            @Html.ValidationSummary(true)
            <div class="divCss" style="padding-top: 15px">
                <div class="DivCss2">
                    @Html.Label("گذر واژه جاری", new { @class = "WebUserLabel" })
                </div>
                <div class="FloatRight">
                    @Html.PasswordFor(x => x.OldPassword, new { @class = "webUserTextBox", @style = "width:160px" })
                </div>
                <div class="FloatRight">
                    @Html.ValidationMessage("OldPassword", new { @class = "field-validation-left" })
                </div>
            </div>
            <div class="divCss">
                <div class="DivCss2">
                    @Html.Label("گذر واژه جدید", new { @class = "WebUserLabel" })
                </div>
                <div class="FloatRight">
                    @Html.PasswordFor(x => x.NewPassword, new { @class = "webUserTextBox", @style = "width:160px" })
                </div>
                <div class="FloatRight">
                    @Html.ValidationMessage("NewPassword", " پسورد جدید الزامی است .", new { @class = "field-validation-left" })
                </div>
            </div>
            <div class="divCss">
                <div class="DivCss2">
                    @Html.Label("تکرار گذر واژه", new { @class = "WebUserLabel" })
                </div>
                <div class="FloatRight">
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "webUserTextBox", @style = "width:160px" })
                </div>
                <div class="FloatRight">
                    @Html.ValidationMessage("ConfirmPassword", "پسورد جدید و تکرار پسورد جدید مشابه هم نیستند ", new { @class = "field-validation-left" })
                </div>
            </div>
            <div class="divCss" style="padding-top: 15px; padding-right: 29px;">
                <div class="DivCss1">
                    &nbsp;
                </div>
                <div class="FloatRight">
                    <input id="btnSave" type="submit" class="webUserButton" value="ثبت" />
                </div>
            </div>
        }
    </div>
</div>
