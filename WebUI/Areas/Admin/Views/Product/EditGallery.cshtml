@model Domain.Validation.Admin.validationEditGalleryTab
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminOtherPageLayout.cshtml";
    Domain.ViewModel.Admin.IconTitlePage MenuItems = ViewBag.MenuObject;
    string Result = Convert.ToString(TempData["result"]);
}
<script src="~/Scripts/jquery.js"></script>
@section scripts{
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
}

@Html.Hidden("MenuItems", "1433072936_home.png" + ":-" + "مدیریت صفحات سایت" + ":-" + "محصولات")

<script src="~/Scripts/jquery.js"></script> 
    <script src="~/Scripts/Admin/IconTitlePageScript.js"></script>
    <script>
        Page();
    </script>
<div class="divCssWh">
    <script src="~/Scripts/Admin/ConfirmDelete.js"></script>
    @if (Result != "")
    {
        <div class="divCss" style="padding-right: 0;">
            @if (Result == "OK")
            {
                <div id="SuccessMsg" style="float: right; width: 300px;">
                    @Html.Partial("~/Areas/Admin/Views/Alerts/_Successful.cshtml")
                </div>
            }
            else
            {
                <div id="AlertMsg" style="float: right; width: 300px;">
                    @Html.Partial("~/Areas/Admin/Views/Alerts/_Error.cshtml")
                </div>
            }
        </div>
    }
    @using (Html.BeginForm(actionName: "EditGallery", controllerName: "Product", method: FormMethod.Post,
                       htmlAttributes: new { enctype = "multipart/form-data" }))
        {
        @Html.HiddenFor(x=>x.id)
    <div class="divCss" style="padding-top: 15px">
        <div class="DivCss1">
            @Html.Label("نام تب", new { @class = "WebUserLabel" })
        </div>
        <div class="FloatRight">
            @Html.TextBoxFor(x => x.TabName, new { @class = "webUserTextBox", @style = "width:160px" })
        </div>
        <div class="FloatRight">
            @Html.ValidationMessage("TabName", new { @class = "field-validation-left" })
        </div>
    </div>
    <div class="divCss">
        <div class="DivCss1">
            @Html.Label("فایل ", new { @class = "WebUserLabel" })
        </div>
        <div class="FloatRight">
            @Html.TextBoxFor(x => x.Image, new { @type = "file" })
        </div>
    </div>
             <div class="divCss" style="padding-top: 15px; padding-right: 4px;">
                <div class="DivCss1">
                    &nbsp;
                </div>
                <div class="FloatRight">
                    <input id="btnSave" type="submit" class="webUserButton" value="ثبت" />
                </div>
            </div>
        <input type="hidden" id="alts" name="alts" />
    }
    <div id="BoxContent">
        @Html.Partial("_EditGallery")
    </div>
</div>
